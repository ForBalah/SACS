@model IList<SACS.DataAccessLayer.Models.ServiceApp>
@{
    ViewBag.Title = "Service Apps";
}

@section Breadcrumbs {
    <li>@Html.ActionLink("Home", "Index", "Server")</li>
    <li>@Html.ActionLink("Applications", "Index", "ServiceApps")</li>
    <li class="active"><i class="fa fa-list-alt"></i> Service Apps</li>
}


<!-- Logs box -->
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Installed List</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-1 hidden-xs hidden-sm">
                <strong>Status</strong>
            </div>
            <div class="col-md-3">
                <strong>Name / Environment</strong>
            </div>
            <div class="col-md-3 hidden-xs hidden-sm">
                <strong>Description</strong>
            </div>
            <div class="col-md-1 hidden-xs hidden-sm">
                <strong>Startup</strong>
            </div>
            <div class="col-md-2 hidden-xs hidden-sm">
                <strong>Assembly</strong>
            </div>
            <div class="col-md-2 hidden-xs hidden-sm pull-right">
                <strong>Actions</strong>
            </div>
        </div>
        @foreach (var serviceApp in Model)
        {
            <div class="row">
                <div class="row-border"></div>
                <div class="col-md-1">
                    <img src="@Url.Content(serviceApp.ImagePath)" alt="@serviceApp.StateEnum" />
                </div>
                <div class="col-md-3">
                    @serviceApp.Name / @serviceApp.Environment
                </div>
                <div class="col-md-3">
                    @serviceApp.Description
                </div>
                <div class="col-md-1">
                    @serviceApp.StartupTypeEnum
                </div>
                <div class="col-md-2">
                    @serviceApp.Assembly
                </div>
                <div class="col-md-2 pull-right">
                    Stop Start Run
                </div>
            </div>
        }
    </div><!-- /.box-body -->
    <div class="box-footer">
        <small>Note: Service Apps can be modified through the Windows console.</small>
    </div><!-- /.box-footer-->
</div><!-- /.box -->