@using System.IO

@model IEnumerable<string>

@{
    ViewBag.Title = "Server Logs";
}

@section Breadcrumbs {
    <li>@Html.ActionLink("Home", "Index", "Server")</li>
    <li>@Html.ActionLink("Server", "Index", "Server")</li>
    <li class="active"><i class="fa fa-book"></i> Logs</li>
}

<!-- Logs box -->
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Available Log Files</h3>
        <div class="box-tools pull-right">
            <a href="@Url.Action("Index")" class="btn"><span class="glyphicon glyphicon-refresh"></span> Refresh</a>
        </div>
    </div>
    <div class="box-body">
            @foreach (var log in Model.OrderBy(m => m).Select(m => Path.GetFileName(m)))
            {
                <div class="row">
                    <div class="row-border"></div>
                    <div class="col-xs-9">
                        @log
                    </div>
                    <div class="col-xs-3 text-right">
                        @Html.ActionLink("View", "Detail", new { id = log }, new { @class = "btn btn-default btn-sm" })
                    </div>
                </div>
            }
    </div><!-- /.box-body -->
    <div class="box-footer">
        <small><strong>Note:</strong> Logs can be downloaded from the server.</small>
    </div><!-- /.box-footer-->
</div><!-- /.box -->