@using System.Reflection
@using SACS.Web.PresentationLogic.Extensions;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SACS Web Management Console</title>
    @Styles.Render("~/Content/css")
    <!-- TODO: Move these into the solution -->
    <!-- Font Awesome Icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="http://code.ionicframework.com/ionicons/2.0.0/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="skin-blue">
    <div class="wrapper">
        <header class="main-header">
            <a href="@Url.Content("~/")" class="logo" title="@typeof(MvcApplication).Assembly.GetName().Version">Manage<b>SACS</b></a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@Url.Content("~/Content/Images/user.png")" class="user-image" alt="User Image" />
                                <span class="hidden-xs">@User.Identity.Name &nbsp;</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="@Url.Content("~/Content/Images/user.png")" class="user-image" alt="User Image" />
                                    <p>
                                        @User.Identity.Name &nbsp;
                                    </p>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- =============================================== -->
        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">SERVER</li>
                    <li>
                        <a href="@Url.Action("Index", "Server")">
                            <span class="glyphicon glyphicon-dashboard"></span>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Logs")">
                            <span class="glyphicon glyphicon-book"></span>
                            <span>Logs</span>
                        </a>
                    </li>
                    <li class="header">APPLICATIONS</li>
                    <li>
                        <a href="@Url.Action("Index", "ServiceApps")">
                            <span class="glyphicon glyphicon-list-alt"></span>
                            <span>Service Apps</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Metrics", "ServiceApps")">
                            <span class="glyphicon glyphicon-stats">
                            </span><span>Metrics</span>
                        </a>
                    </li>
                    <li class="header">DOCUMENTATION</li>
                    <li>
                        <a href="@Url.Action("Index", "Help")">
                            <span class="glyphicon glyphicon-question-sign"></span>
                            <span>Help</span>
                        </a>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- =============================================== -->
        <!-- Right side column. Contains the navbar and content of the page -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    @ViewBag.Title
                </h1>
                <ol class="breadcrumb">
                    @RenderSection("Breadcrumbs", required: false)
                </ol>
            </section>
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
        </div><!-- /.content-wrapper -->
        <footer class="main-footer">
            <strong>Copyright &copy; @DateTime.Today.Year.</strong> All rights reserved
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/plugins")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
    @this.WriteScriptBlocks()
</body>
</html>
