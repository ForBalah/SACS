<UserControl x:Class="SACS.Windows.Controls.ConfigurationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Loaded="StackPanel_Loaded">
        <TextBox Name="VersionInfoLabel" Text="Server Version: " Background="Transparent" IsReadOnly="True" BorderBrush="White" />
        <TextBox Name="UrlLabel" Text="SACS Service URL: " Background="Transparent" IsReadOnly="True" BorderBrush="White" />
        <TextBox Name="SupportEmailLabel" Text="Support Email Address: " Background="Transparent" IsReadOnly="True" BorderBrush="White" />
        <TextBox Name="NameLabel" Text="Windows Service Name: " Background="Transparent" IsReadOnly="True" BorderBrush="White" />
        <TextBox Name="DisplayNameLabel" Text="Display Name: " Background="Transparent" IsReadOnly="True" BorderBrush="White" />
        <TextBox Name="LookBackDaysLabel" Text="Chart Look-back Days: " Background="Transparent" IsReadOnly="True" BorderBrush="White" />
    </StackPanel>
</UserControl>
